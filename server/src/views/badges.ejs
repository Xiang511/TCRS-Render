<!DOCTYPE html>
<html lang="zh-TW">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/player.css">
  <link rel="stylesheet" href="/css/nav.css">
  <link rel="shortcut icon" href="/img/oldrank.png" type="image/x-icon">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <!-- jQUERY -->
  <script src="/js/jquery_3.7.1_jquery.min.js"></script>
  <!-- jQUERY -->

  <link href="/js/DataTables/css/jquery.dataTables.min.css" rel="stylesheet">

  <script src="/js/DataTables/js/jquery.dataTables.min.js"></script>

  <!-- fixed col -->
  <link rel="stylesheet" href=https://cdn.datatables.net/fixedcolumns/4.3.0/css/fixedColumns.dataTables.min.css">
  <script src="https://cdn.datatables.net/fixedcolumns/4.3.0/js/dataTables.fixedColumns.min.js"></script>
  <!-- fixed col -->

  <!-- DataTables Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.tailwindcss.min.js"></script>

</head>

<body>
  <%- include('layout/header') %>
  <div class="container">
    <h1><%= title %> <img class="leaderboardTitleIcon" src="/img/battle.png" alt=""></h1>

    <%- include('layout/season-selector') %>
    <%- include('layout/loading') %>

    <!-- 顯示玩家列表 -->
    <table id="myTable" class="display" style="display: none;">
      <thead>
        <tr>
          <th></th>
          <th>名稱</th>
          <th>戰旗收集</th>
          <th>表情收集</th>
          <th>經典12勝</th>
          <th>終極12勝</th>
          <th>2v2</th>
          <th>驟死賽</th>
          <th>雙倍聖水</th>
          <th>選卡模式</th>
          <th>CRL2018</th>
          <th>CRL2019</th>
          <th>CRL2022</th>
          <th>CRL2023</th>
          <th>CRL2024</th>
          <th>CRL2025</th>
        </tr>
      </thead>
      <tbody>
        <% players.forEach(function(player) { %>
        <tr>
          <th></th>
          <td><a href="/players/<%= player.tag.substring(1) %>"><%= player.name %></a> </td>
          <td><%= player.badges.BannerCollection.progress || 0 %></td>
          <td><%= player.badges.EmoteCollection.progress || 0 %></td>
          <td><%= player.badges.Classic12Wins.progress || 0 %></td>
          <td><%= player.badges.Grand12Wins.progress || 0 %></td>
          <td><%= player.badges['2v2'].progress || 0 %></td>
          <td><%= player.badges.SuddenDeath.progress || 0 %></td>
          <td><%= player.badges.RampUp.progress || 0 %></td>
          <td><%= player.badges.Draft.progress || 0 %></td>
          <td><%= player.badges.Crl20Wins.progress || 0 %></td>
          <td><%= player.badges.Crl20Wins2019.progress || 0 %></td>
          <td><%= player.badges.Crl20Wins2022.progress || 0 %></td>
          <td><%= player.badges.Crl20Wins2023.progress || 0 %></td>
          <td><%= player.badges.Crl20Wins2024.progress || 0 %></td>
          <td><%= player.badges.Crl20Wins2025.progress || 0 %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <script src="https://SiteStates.com/show/js_text/49bcb5c0fd457f7a07d5fba4e343a5bf" type="text/javascript"></script>
    <a href="/joinus" class="joinus">沒看到你的資料? 加入我們</a>
  </div>
  <%- include('layout/footer') %>

  <script src="/js/datatable.js"></script>
  <script>
    // 季度選擇器切換
    $('#seasonSelect').on('change', function() {
      const selectedSeason = $(this).val();
      if (selectedSeason) {
        window.location.href = `/players/badges?time=${encodeURIComponent(selectedSeason)}`;
      } else {
        window.location.href = '/players/badges';
      }
    });
  </script>
</body>

</html>