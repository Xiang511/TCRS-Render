<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>忘記密碼 - TCRS</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            padding: 40px;
            max-width: 500px;
            width: 100%;
            animation: slideIn 0.5s ease-out;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .icon-wrapper {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            margin-bottom: 20px;
        }

        .icon-wrapper i {
            font-size: 40px;
            color: white;
        }

        h1 {
            color: #333;
            margin-bottom: 10px;
            font-size: 28px;
        }

        .subtitle {
            color: #666;
            font-size: 14px;
            line-height: 1.6;
        }

        .form-group {
            margin-bottom: 25px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 600;
            font-size: 14px;
        }

        .input-wrapper {
            position: relative;
        }

        .input-wrapper i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
            font-size: 20px;
        }

        input[type="email"] {
            width: 100%;
            padding: 12px 15px 12px 45px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 16px;
            transition: all 0.3s;
        }

        input[type="email"]:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .hint {
            font-size: 12px;
            color: #999;
            margin-top: 5px;
        }

        .btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }

        .btn:active {
            transform: translateY(0);
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .message {
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: none;
            align-items: center;
            gap: 10px;
            animation: fadeIn 0.3s ease-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .message.success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .message.error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .message.show {
            display: flex;
        }

        .loading {
            display: none;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255,255,255,0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: #667eea;
            text-decoration: none;
            font-size: 14px;
            transition: color 0.3s;
        }

        .back-link:hover {
            color: #764ba2;
            text-decoration: underline;
        }

        .steps {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin: 20px 0;
        }

        .steps h3 {
            color: #333;
            font-size: 16px;
            margin-bottom: 15px;
        }

        .step-item {
            display: flex;
            align-items: flex-start;
            gap: 10px;
            margin-bottom: 10px;
            font-size: 14px;
            color: #666;
        }

        .step-item i {
            color: #667eea;
            margin-top: 2px;
        }

        @media (max-width: 600px) {
            .container {
                padding: 30px 20px;
            }

            h1 {
                font-size: 24px;
            }

            .icon-wrapper {
                width: 60px;
                height: 60px;
            }

            .icon-wrapper i {
                font-size: 30px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="icon-wrapper">
                <i class='bx bx-lock-open-alt'></i>
            </div>
            <h1>忘記密碼</h1>
            <p class="subtitle">輸入您的電子郵件地址，我們將發送重設密碼的連結給您</p>
        </div>

        <div id="message" class="message"></div>

        <form id="forgotPasswordForm">
            <div class="form-group">
                <label for="email">
                    <i class='bx bx-envelope'></i> 電子郵件
                </label>
                <div class="input-wrapper">
                    <i class='bx bx-envelope'></i>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        placeholder="請輸入您的電子郵件" 
                        required
                        autocomplete="email"
                    >
                </div>
                <p class="hint">請輸入您註冊時使用的電子郵件地址</p>
            </div>

            <button type="submit" class="btn" id="submitBtn">
                <i class='bx bx-paper-plane'></i>
                <span>發送重設連結</span>
                <div class="loading"></div>
            </button>
        </form>

        <div class="steps">
            <h3><i class='bx bx-info-circle'></i> 重設密碼步驟</h3>
            <div class="step-item">
                <i class='bx bx-check-circle'></i>
                <span>輸入您的註冊電子郵件</span>
            </div>
            <div class="step-item">
                <i class='bx bx-check-circle'></i>
                <span>檢查您的電子郵件收件匣</span>
            </div>
            <div class="step-item">
                <i class='bx bx-check-circle'></i>
                <span>點擊重設連結並設定新密碼</span>
            </div>
            <div class="step-item">
                <i class='bx bx-check-circle'></i>
                <span>使用新密碼登入</span>
            </div>
        </div>

        <a href="/users/sign_in" class="back-link">
            <i class='bx bx-arrow-back'></i> 返回登入頁面
        </a>
    </div>

    <script>
        const form = document.getElementById('forgotPasswordForm');
        const messageDiv = document.getElementById('message');
        const submitBtn = document.getElementById('submitBtn');
        const loading = submitBtn.querySelector('.loading');
        const btnText = submitBtn.querySelector('span');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const email = document.getElementById('email').value.trim();
            
            if (!email) {
                showMessage('請輸入電子郵件地址', 'error');
                return;
            }

            // 簡單的電子郵件格式驗證
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                showMessage('請輸入有效的電子郵件地址', 'error');
                return;
            }

            // 顯示載入狀態
            submitBtn.disabled = true;
            loading.style.display = 'block';
            btnText.textContent = '發送中...';

            try {
                const response = await fetch('/users/auth/forgot-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email })
                });

                const data = await response.json();

                if (response.ok) {
                    showMessage(
                        '✅ 重設密碼連結已發送！請檢查您的電子郵件（包括垃圾郵件資料夾）', 
                        'success'
                    );
                    document.getElementById('email').value = '';
                    
                    // 3 秒後跳轉到登入頁面
                    setTimeout(() => {
                        window.location.href = '/login';
                    }, 3000);
                } else {
                    showMessage(data.message || '❌ 發送失敗，請稍後再試', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showMessage('❌ 網路錯誤，請檢查連線', 'error');
            } finally {
                // 恢復按鈕狀態
                submitBtn.disabled = false;
                loading.style.display = 'none';
                btnText.textContent = '發送重設連結';
            }
        });

        function showMessage(text, type) {
            messageDiv.innerHTML = `
                <i class='bx ${type === 'success' ? 'bx-check-circle' : 'bx-error-circle'}'></i>
                <span>${text}</span>
            `;
            messageDiv.className = `message ${type} show`;
            
            // 錯誤訊息 5 秒後自動消失
            if (type === 'error') {
                setTimeout(() => {
                    messageDiv.classList.remove('show');
                }, 5000);
            }
        }

        // 防止重複提交
        let isSubmitting = false;
        form.addEventListener('submit', (e) => {
            if (isSubmitting) {
                e.preventDefault();
                return false;
            }
        });
    </script>
</body>
</html>